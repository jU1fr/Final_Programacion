<Window x:Class="Parcial_Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Alumnos" Height="350" Width="600">
    <Grid>
        <DataGrid x:Name="AlumnosDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="10,10,10,50" VerticalAlignment="Top" Height="200" Width="560">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Carnet" Binding="{Binding Carnet}" Width="100"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="150"/>
                <DataGridTextColumn Header="Telefono" Binding="{Binding Telefono}" Width="100"/>
                <DataGridTextColumn Header="Grado" Binding="{Binding Grado}" Width="100"/>
                <DataGridTextColumn Header="Usuario" Binding="{Binding UsuarioNombre}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Agregar" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Width="75" Click="Agregar_Click"/>
        <Button Content="Editar" HorizontalAlignment="Left" Margin="90,220,0,0" VerticalAlignment="Top" Width="75" Click="Editar_Click"/>
        <Button Content="Eliminar" HorizontalAlignment="Left" Margin="170,220,0,0" VerticalAlignment="Top" Width="75" Click="Eliminar_Click"/>

    </Grid>
</Window>

